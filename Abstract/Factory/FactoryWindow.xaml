<Window x:Class="Abstract.Factory.FactoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Abstract.Factory"
        mc:Ignorable="d"
        Title="FactoryWindow" Height="450" Width="800">
    <Grid>
				<StackPanel Margin="10">
						<Label FontWeight="Bold">Select data source:</Label>
						<RadioButton Name="rbSqlServer" GroupName="Options" IsChecked="True">SQL Server</RadioButton>
						<RadioButton Name="rbOleDb" GroupName="Options">OLE DB</RadioButton>
						<Button Margin="0,10,0,0" Width="100" Click="Button_Click">Load Data</Button>
				</StackPanel>
		</Grid>
</Window>
